      <!-- Article main content -->
      <article class="col-sm-9 thumbnails ">
          <h2 class="section-title"><%= @products.size == Product.all.size ?  "All"  :  "#{@products.size} products" %></h2>
         <% @products.each do |product| %>
             <div class="col-xs-9 col-sm-6 col-md-4 col-lg-4 ">
                    <span class=" artGroup slide ">
                        <span class="artwork">
                        <%= image_tag(product.image_url, :class => "img-thumbnail") %>
                        <span class = "detail"><p>
                                       <span><b><%= product.title %></b></span></br>
                                       <%= sanitize product.description %>  </br>
                                       <span><b><%= number_to_currency(product.price) %> </b></span></br>
                                       <%= link_to 'Add to Cart' ,line_items_path(:product_id => product), :method => :post, :remote => true %></p>
                                       </span>
                                       </span>
                                 </span>
                                       <span class="details"><b><%= product.title %></b></span>
                                    </div>
                <% end %>

      </article>
      <!-- /Article   -->
      </div>
   <div class="apple_pagination">
          <div class="page_info">
          <%= page_entries_info @products %>
    </div>
    <%= will_paginate @products, :container => false %>
   </div>







<%= simple_form_for @customer , :html=>{:class=>"form-horizontal"} do |f| %>
    <%= f.input :first_name, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "First Name" %>
    <%= f.input :last_name, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "Last Name" %>
    <%= f.input :email, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "Email" %>
    <%= f.input :pay_type, :collection => [ "Check" , "Credit card" , "Purchase order" ], :prompt => "Choose one", :input_html => {:class => "form-control input-lg"}, :label=> false  %>
    <%= f.input :address_1, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "Address Line 1" %>
    <%= f.input :address_2, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "Address Line 2" %>
    <%= f.input :birthday, :input_html => {:class => "form-control input-lg"}, :label => false, :placeholder => "Birthday", :as => :string %>
    <div class="col-sm-2 col-sm-offset-7 btn-customer-create">
        <button type="submit" class="btn btn-lg btn-action">Create</button>
    </div>
<% end %>


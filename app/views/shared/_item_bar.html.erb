	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<%= pluralize @cart.total_items, 'Item' %>
		<%=  "#{number_to_currency(@cart.total_price, locale: :fi)}" + " â‚¬" %> <b class="caret"></b></a>
	<ul class="dropdown-menu item">
		<%= render @cart %>
		<%= link_to 'Empty Cart', @cart, class: 'empty-link', :method => :delete %>
		<% if !signed_in? %>
		<%= link_to 'Checkout', new_customer_path, class: 'checkout-link', :method=> :get %>
		<% else %>

<div class="row section recentworks topspace">
    <h2 class="section-title"><span><%= Product.search(params[:search]).size == Product.all.size ? "All Products" : "#{Product.search(params[:search]).size} products founded : " %></span></h2>
        <div class=" thumbnails recentworks row">
            <% @products.each do |product| %>
             <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    <span class=" artGroup slide ">
                        <span class="artwork">
                        <%= image_tag(product.image_url, :class => "img-thumbnail") %>
                        <span class = "detail"><p>
                                       <span><b><%= product.title %></b></span></br>
                                       <%= sanitize product.description %>  </br>
                                       <span><b><%= number_to_currency(product.price) %> </b></span></br>
                                       <%= link_to 'Add to Cart' ,line_items_path(:product_id => product), :method => :post, :remote => true %></p>
                                       </span>
                                       </span>
                                 </span>
                                       <span class="details"><b><%= product.title %></b></span>
                                    </div>
                <% end %>
              </div>
</div>
<div class="apple_pagination">
             <div class="page_info">
             <%= page_entries_info @products %>
       </div>
       <%= will_paginate @products, :container => false %>
</div>
<br>


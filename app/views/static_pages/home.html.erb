<div class="row section recentworks topspace">

			<h2 class="section-title"><span>Products</span></h2>

			<div class="thumbnails recentworks row">
			    <% @products.each do |product| %>

				<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
					<a class="thumbnail" href="sidebar-right.html">
						<span class="img">
						    <%= image_tag(product.image_url) %>
						    <span class = "cover"><p><%= sanitize product.description %></p></span>
							<span class="cover"><span class="more">Add To Basket &rarr;<%= number_to_currency(product.price) %></span></span>
						</span>

						<span class="title"><%= product.title %></span>
					</a>
					<span class="details"><a href="">Web design</a> | <a href="">Wordpress</a> | <a href="">Logotype</a></span>
					<h4></h4>
					<p></p>
				</div>
				<% end %>
		</div>
</div>



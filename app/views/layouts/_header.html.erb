<header id="header">
     <nav class="navbar navbar-inverse navbar-fixed-top headroom">
	<div class="container-fluid">
	      <div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
		<%= link_to 'E-Store' , root_path, :class => 'navbar-brand' %>
	       </div>
	<div class="navbar-collapse collapse">
	    <ul class="nav navbar-nav">
	             <li class="navbar-left dropdown"><%= link_to 'Categories <b class="caret"></b>'.html_safe, list_path, :class => "dropdown-toggle", :data => {:toggle => "dropdown"}  %>
		<ul class="dropdown-menu">
		<% @categories.each do |category| %>
	  	<li><%= link_to "#{category.name}",:controller => 'static_pages',:action => 'list', :id => category.id, :class => "caret" %></li>
		<% end %>
		</ul></li>
		<li class="navbar-left">
		<%= link_to 'Products', root_path %></li>
		<li class = "navbar-left"><%= link_to 'About', about_path %></li>
		<li class = "navbar-left"><%= link_to 'Sign Up', signup_path %></li>
		<% if signed_in? %>
		<% if current_user.admin? %>
		<li class = "navbar-left"><%= link_to "Users", users_path %></li>  <% end %>
		<li class="navbar-left dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
		<ul class="dropdown-menu">
		                				<li><%= link_to "Profile", current_user %></li>
		                				<li><%= link_to "Settings",  edit_user_path(current_user) %></li>
		                				<li><%#= link_to "Orders", @customer.orders %></li>
		                				<li class="divider"></li>
		                				<li><%= link_to "Sign out", signout_path, method: "delete" %>
		                				</li>
		              			</ul>
		            			</li>
			          <% else %>
					<li class = "navbar-left"><%= link_to 'Login', signin_path %></li>
			          <% end %>
			          <li class = "navbar-right dropdown">
							<% if @cart && @cart.line_items.count > 0 %>
					    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-shopping-cart"></i>&nbsp;&nbsp;

			          <%= pluralize @cart.total_items, 'ITEM' %>
			          <%= "(" + "#{number_to_currency(@cart.total_price)}" + ")" %><b class="caret"></b></a>
			                <ul class="dropdown-menu">
							<li><%= link_to 'Show Cart',:controller => 'static_pages', :action => 'cart'%>
							</li>
							<li><%= link_to 'Empty Cart', @cart, :method => :delete %> </li>
							<li><%= link_to_unless_current 'Checkout', new_customer_path, :method=> :get %></li>
						</ul><% end %></li>

				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</nav>
</header>
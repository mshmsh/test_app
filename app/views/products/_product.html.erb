<!-- Modal -->
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h5 class="modal-title"><%= product.title %></h5>
            </div>
            <div class="modal-body">
                <h6 class="col-sm-8"><%= sanitize product.description %></h6>
                <div class="pull-right"><%= image_tag(product.image_url, class: "img-thumbnail") %></div>
             </div>
            <div class="modal-footer">
            <span class="price-modal"><%= number_to_currency(product.price, locale: :fi) %></span>
            <span class="add-modal"><%= link_to 'Add to Basket' ,line_items_path(:product_id => product), :method => :post, :remote => true, class: 'btn btn-md btn-action' %></span>
            </div>
        </div>
    </div>







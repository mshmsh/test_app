<% provide(:title, 'Sign in') %>
 <div class="col-md-9">
        <article class="col-xs-12 maincontent">
         <div class="col-md-9 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <h3 class="text-left">Login to your account</h3>
                                <br>
                                  <!-- <form> -->
              <p class="text-left text-muted"> <%= link_to 'Sign up', signup_path %> If you have not registered yet please. </p>

              <!-- <form> -->
             <%= simple_form_for :session, :url => sessions_path, :html => {:class =>'form-horizontal'}  do |f| %>
             <%= f.input :email, :input_html => {:class => "form-control input-sm"}, :label => false, :placeholder => "Email" %>
             <%= f.input :password, :input_html => {:class => "form-control input-sm"}, :label => false, :placeholder => "Password" %>


                  <div class="col-md-9 text-right">
                    <button class="btn-sm btn-action" type="submit">Login</button>
                  </div>
              <!-- </form> -->
              <% end %>
            </div>
          </div>
        </div>
      </article>
      <!-- /Article -->
    </div>
  </div>  <!-- /container -->
  </div>

